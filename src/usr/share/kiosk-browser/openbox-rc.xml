<?xml version="1.0" encoding="UTF-8"?>

<!-- 
openbox configuration for kiosk-browser
-->

<openbox_config xmlns="http://openbox.org/3.4/rc"
		xmlns:xi="http://www.w3.org/2001/XInclude">
<desktops>
  <number>1</number>
</desktops>

<applications>
  <application name="*">
    <decor>no</decor>
  </application>  

  <application name="*xosview*">
    <desktop>all</desktop>
    <layer>above</layer>
    <skip_pager>yes</skip_pager>
    <skip_taskbar>yes</skip_taskbar>
  </application>

  <application class="*omium*">
    <maximized>true</maximized>
  </application>

</openbox_config>
